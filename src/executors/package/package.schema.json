{
  "$schema": "http://json-schema.org/schema",
  "version": 1,
  "cli": "nx",
  "title": "Nx Simple package executor",
  "description": "Builds TypeScript projects for external use",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "assets": {
      "type": "array",
      "default": [],
      "items": {
        "type": "string"
      }
    },
    "distribution": {
      "type": "string",
      "description": "",
      "enum": ["lib", "npm", "app"]
    },
    "entry": {
      "type": "string",
      "description": "Package entry module",
      "default": "index.ts"
    },
    "targetRuntime": {
      "type": "string",
      "description": "The target runtime environment",
      "default": "es2020"
    }
  },
  "required": ["distribution"]
}
